---
import '../index.css';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <meta name="author" content="Swift Invention, Inc." />
    <meta
      name="keywords"
      content="software engineers, software developer, software company, software development company, software design, mobile development, web development, software application developer, programming software, app development"
    />
