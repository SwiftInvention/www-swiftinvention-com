---
import plumcheckLaptopImage from '~/assets/images/new/devices/plumcheck-desktop.png';
import plumcheckMobileImage from '~/assets/images/new/devices/plumcheck-mobile.png';
import privoLaptopImage from '~/assets/images/new/devices/privo-2x.png';
import vierallyLaptopImage from '~/assets/images/new/devices/vierally-desktop.png';
import vierallyMobile2xImage from '~/assets/images/new/devices/vierally-mobile-2x.png';
import vierallyMobileImage from '~/assets/images/new/devices/vierally-mobile.png';
import plumcheckLogoImage from '~/assets/images/new/logos/plumcheck-logo.png';
import privoLogoImage from '~/assets/images/new/logos/privo-white.png';
import vierallyLogoImage from '~/assets/images/new/logos/vierally-logo.png';
import spotlightBgImage from '~/assets/images/new/spotlight-bg.png';
import {
  PlumcheckStack,
  PrivoStack,
  VieRallyStack,
} from '~/constants/clientsStack.astro';
import Client from '../clients/Client.astro';
import type { Props as ClientProps } from '../clients/Client.astro';

const Clients: ClientProps[] = [
  {
    desktopImg: { default: privoLaptopImage },
    logoImg: privoLogoImage,
    description: 'Childrenâ€™s online identity & consent management',
    name: 'Privo',
    technologiesImages: PrivoStack,
    classes:
      'bg-[#005A88] md:[&_.desktop-img]:bottom-[-30px] md:[&_.desktop-img]:w-[70%] ',
  },
  {
    desktopImg: { default: vierallyLaptopImage },
    logoImg: vierallyLogoImage,
    mobileImg: { default: vierallyMobileImage, x2: vierallyMobile2xImage },
    description: 'AI tool to predict virality and maximize marketing ROI',
    name: 'VieRally',
    technologiesImages: VieRallyStack,
    classes: 'bg-[#1E3A8A]',
  },
  {
    desktopImg: { default: plumcheckLaptopImage },
    logoImg: plumcheckLogoImage,
    mobileImg: { default: plumcheckMobileImage },
    description:
      'Allow dating and social media app users to share verified ID and health information',
    name: 'PlumCheck',
    technologiesImages: PlumcheckStack,
    classes: 'bg-[#40169C]',
  },
];
---

<div class="pt-24 md:pt-32 px-4 md:px-8 xl:px-20 relative">
  <img src={spotlightBgImage.src} class="absolute top-0 w-full left-0 z-0" />
  <div class="relative z-10 mb-16 md:mb-20">
    <h2 class="text-6xl md:text-6xl-desktop text-white">
      For clients turned partners
    </h2>
    <div class="text-lg md:text-lg-desktop mt-4 mb-12 text-white opacity-80">
      Dive into our inspiring case studies that beautifully illustrate our
      creative solutions and the wonderful partnerships we've built with clients
      from diverse fields.
    </div>
  </div>
  <div class="flex flex-col gap-5 md:gap-20">
    {Clients.map((clientData) => <Client {...clientData} />)}
  </div>
</div>

