---
import ArrowRight from '~/assets/images/new/arrow-right.svg';

const { name, description, logoImg, caseLink, desktopImg, mobileImg, classes } = Astro.props;
---

<div class:list={['md:pt-20 md:pb-16 py-8 px-6 md:px-16 relative h-[600px] overflow-hidden rounded-xl', classes]}>
	<img src={desktopImg.src} class="absolute bottom-[-30px] left-[40%] max-h-[584px]"/>
	<div class="relative w-[40%] flex flex-col gap-6">
		<img src={logoImg.src} width={logoImg.width} height={logoImg.height} />
		<div class="text-3xl md:text-3xl-desktop text-white">{description}</div>
		<a href={caseLink} class="text-white cursor-pointer text-xl md:text-xl-desktop hover:opacity-80">{name} case study <ArrowRight class="inline-block ml-2.5 w-5 h-5 md:w-7 md:h-7" /></a>
	</div>
</div>

